f = open("C:/Users/unju4/OneDrive/바탕 화면/note/planets.txt","r")
earth = 0
for line in f:
    planet = line.strip().lower()
    if planet[0] == "#":
        continue
    earth += 1
    if planet == "earth":
        break
print("Earth is planet #%d"%earth)
#주석(#)달린 줄은 continue 키워드를 통하여 건너뛰기

f = open("C:/Users/unju4/OneDrive/바탕 화면/note/words.txt","r")
