for line in f:
    word = line.strip()
    if not "e" in word:
        count += 1
print("%d words have no 'e'"%count)
f.close()
# e 들어가지 않는 단어 찾기

f = open("C:/Users/unju4/OneDrive/바탕 화면/note/words.txt","r")
def abecedarian(word):
    is_abe = False
    for i in range(1,len(word)):
        if(word[i-1]<=word[i]):
            is_abe = True
        else:
            is_abe = False
            break
    if is_abe == True:
        print(word)
for l in f:
    word = l.strip()
    abecedarian(word)
#내 풀이
#Abecedarian words
#단어의 모든 글자가 알파벳 순으로 정렬된 단어 찾기

def is_abecedarian(word):
    for i in range(1,len(word)):
        if word[i-1]>word[i]:
            return False
    return True
f = open("C:/Users/unju4/OneDrive/바탕 화면/note/words.txt","r")
for line in f:
    word = line.strip()
    if is_abecedarian(word):
        print(word)
f.close()
#강의 풀이

def triple(word):
    for i in range(len(word)-6):
        if word[i]==word[i+1] and word[i+2]==word[i+3] and word[i+4]==[i+5]:
            return True
#내 풀이
def three_doubles(word):
    s = ""
    for i in range(1,len(word)):
        if word[i-1] == word[i]:
            s = s+"*"
        else:
            s = s+" "
    return "* * *" in s
#강의 풀이   
f = open("C:/Users/unju4/OneDrive/바탕 화면/note/words.txt","r")
for line in f:
    word = line.strip()
    if three_doubles(word):
        print(word)
f.close()
#동일한 두 글자가 연속해서 3번 이상 이어지는 단어

