l = list(range(1,11))
for i in range(len(l)):
    l[i] = l[i]**2

totals = []
for i in range(21,len(countries)):
    medals = gold[i] + silver[i]
    totals.append((medals,countries[i]))

ta = ["JinYeong","Jeongmin","Minsuk","Dohoo","Sangjae","Byung-Jun"]
ta.sort()

