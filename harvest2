from cs1robots import *

def move(robot):
    robot.move()

def turn_left(robot):
    robot.turn_left()

def turn_right(robot):
    for i in range(3):
        robot.turn_left()

def turn_around(robot):
    for i in range(2):
        robot.turn_left()

def climb(robot):
    robot.move()
    turn_right(robot)
    robot.move()

def climb_and_pick(robot):
    robot.pick_beeper()
    turn_right(robot)
    robot.move()
    turn_left(robot)
    move(robot)

def edge(robot):
    turn_left(hubo) #모서리에서의 행동

load_world("C:/Users/unju4/AppData/Local/Programs/Python/Python311/Lib/worlds/harvest2.wld")

hubo = Robot("blue") #world랑 휴보 불러오기

for i in range(5):
    move(hubo)

turn_left(hubo)
move(hubo) #휴보 시작위치 설정

for i in range(3):
    j = (-2)*i+5
    for i in range(4):
        for i in range(j):
            climb_and_pick(hubo)
        edge(hubo)
    move(hubo)
    move(hubo) #휴보 havest2 클리어